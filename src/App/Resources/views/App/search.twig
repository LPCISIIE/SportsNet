{% extends 'layout.twig' %}

{% block body %}

<div class="container">
    <div class="page-header">
        <h3>Résultats pour "{{ query }}" :</h3>
    </div>
    {% if not evenements.empty %}
        {% for event in evenements %}
            <div class="row card">
                <div class="col-md-2">
                    <img src="{{ base_url() }}/{{ event.webPath }}" alt="Evenement">
                </div>
                <div class="col-md-10">
                    <a href="{{ path_for('evenement.show', {'id_evenement': event.id}) }}" class="card-title">{{ event.nom }}</a>
                    <p>{{ event.description }}</p>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p class="card">Aucun résultat pour "{{ query }}"</p>
    {% endif %}
</div>

{% endblock %}
