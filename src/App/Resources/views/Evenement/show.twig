{% extends 'layout.twig' %}

{% import 'Macro/form.twig' as form %}

{% block body %}

<div class="jumbotron">{{ evenement.nom }}</div>

<div class="container">
    <img src="{{ base_url() }}/{{ evenement.webPath }}" style="max-height: 200px;" />
    <div class="jumbotron">{{ evenement.nom }}</div>

    <div class="evenement_debut">Date début : {{ evenement.date_debut }} </div>
    <div class="evenement_fin">Date fin : {{ evenement.date_fin }} </div>
    <div class="evenement_adresse">Adresse : {{ evenement.adresse }} </div>
    <div class="evenement_discipline">Discipline : {{ evenement.discipline }} </div>
    <div class="evenement_telephone">Telephone : {{ evenement.telephone }} </div>
    <div class="evenement_description">Description : {{ evenement.description }} </div>

    <a href="{{ path_for('epreuve.join', {id_evenement: evenement.id}) }}" class="btn btn-default">Rejoindre une épreuve</a>
    <hr>


    {% for epreuve in epreuves %}
        <div class="evenement_description row well">
            <div class="img_epreuve col-md-2">
                <img src="{{ base_url() }}/{{ epreuve.webPath }}" style="width: 100%;" />
            </div>
            <div class="col-md-10">
        <div class="row"><a href="{{ path_for('epreuve.show', {'trial_id' : epreuve['id'], 'event_id' : evenement['id']}) }}">{{epreuve['nom']}}</a></div>
            </div>
        </div>
    {% endfor %}

    <hr>
    {% for picture in pic_links %}
        <div class="img_galerie col-md-3">
            <img src="{{ base_url() }}/{{ picture }}"/>
        </div>
    {% endfor %}


</div>

{% endblock %}
