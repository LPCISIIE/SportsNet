{% extends 'layout.twig' %}

{% import 'Macro/form.twig' as form %}

{% block body %}
    <div class="page-header container">
        <h3>Mon compte</h3>
    </div>
<div class="boite container">


    <form action="{{ path_for('user.compte') }}" method="POST">

        {% if organisateur %}
            {{ form.group('nom', organisateur.nom, 'nom', 'Nom') }}
            {{ form.group('prenom', organisateur.prenom, 'prenom', 'Prénom') }}
            {{ form.group('paypal', organisateur.paypal, 'paypal', 'Adresse Paypal', null, 'email') }}
        {% else %}
            {{ form.group('nom', sportif.nom, 'nom', 'Nom') }}
            {{ form.group('prenom', sportif.prenom, 'prenom', 'Prénom') }}
            {{ form.group('birthday', sportif.birthday|date('d/m/Y'), 'birthday', 'Date de naissance') }}
        {% endif %}

        {{ form.group('email', auth.user.email, 'email', 'Email', null, 'email') }}
        {{ csrf() }}

        <input type="submit" value="Modifier" class="forcer-droite btn btn-primary">
    </form>
</div>

{% endblock %}
